@model IEnumerable<Proyecto1Pro.Models.Catalogo>

@{
    ViewData["Title"] = "Index";
}

</style>

<h1>Catalogo</h1>

<p>
    <a asp-action="Create">Ingresa peluche al catalogo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Peluche)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Peluche.IdPeluche)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCatalogo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCatalogo">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCatalogo">Eliminar</a>
            </td>
        </tr>

}
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
