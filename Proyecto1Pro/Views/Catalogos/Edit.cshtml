@model Proyecto1Pro.Models.Catalogo

@{
    ViewData["Title"] = "Edit";
}


<h1>Editar</h1>

<h4>Catalogo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCatalogo" />
            <div class="form-group">
                <label asp-for="IdPeluche" class="control-label"></label>
                <select asp-for="IdPeluche" class="form-control" asp-items="ViewBag.IdPeluche"></select>
                <span asp-validation-for="IdPeluche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>
<style>
    body {
        background-color:burlywood 
    }

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
